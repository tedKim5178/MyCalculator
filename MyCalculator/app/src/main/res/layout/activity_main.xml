<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/xml_border"
    tools:context="com.example.mk.mycalculator.MainActivity">

    <TextView
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="right"
        android:id="@+id/middle" />

    <EditText
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:inputType="textPersonName"
        android:gravity="right"
        android:background="#ff2ff555"
        android:text="0"
        android:ems="10"
        android:id="@+id/showResult" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:text="+"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            android:onClick="addClicked" />

        <Button
            android:layout_weight="1"
            android:text="-"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:id="@+id/subtract"
            android:onClick="subtractClicked" />


        <Button
            android:layout_weight="1"
            android:text="*"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:id="@+id/multiply"
            android:onClick="multiplyClicked" />

        <Button
            android:layout_weight="1"
            android:text="/"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:id="@+id/divide"
            android:onClick="divideClicked" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:text="7"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:id="@+id/number7"
            android:onClick="number7Clicked" />

        <Button
            android:layout_weight="1"
            android:text="8"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:id="@+id/number8"
            android:onClick="number8Clicked" />

        <Button
            android:layout_weight="1"
            android:text="9"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:id="@+id/number9"
            android:onClick="number9Clicked" />


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="4"
            android:layout_weight="1"
            android:layout_width="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/number4"
            android:onClick="number4Clicked" />
        <Button
            android:text="5"
            android:layout_weight="1"
            android:layout_width="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/number5"
            android:onClick="number5Clicked" />

        <Button
            android:text="6"
            android:layout_weight="1"
            android:layout_width="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/number6"
            android:onClick="number6Clicked" />


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:text="1"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:id="@+id/number1"
            android:onClick="number1Clicked" />

        <Button
            android:layout_weight="1"
            android:text="2"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:id="@+id/number2"
            android:onClick="number2Clicked" />

        <Button
            android:layout_weight="1"
            android:text="3"
            android:layout_width="111dp"
            android:layout_height="wrap_content"

            android:id="@+id/number3"
            android:onClick="number3Clicked" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:text="."
            android:layout_width="83sp"
            android:layout_height="wrap_content"
            android:id="@+id/decimalButton"
            android:onClick="decimalClicked" />
        <Button
            android:layout_weight="1"
            android:text="0"
            android:layout_width="83sp"
            android:layout_height="wrap_content"
            android:id="@+id/number0"
            android:onClick="number0Clicked" />

        <Button
            android:layout_weight="1"
            android:text="="
            android:layout_width="83sp"
            android:layout_height="wrap_content"
            android:id="@+id/calculate"
            android:onClick="calculateClicked" />
        <Button
            android:layout_weight="1"
            android:text="C"
            android:layout_width="83sp"
            android:layout_height="wrap_content"
            android:id="@+id/initialize"
            android:onClick="initializeClicked" />
    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="!!MK's First Application!!"
        android:textSize="30dp"/>

</LinearLayout>
